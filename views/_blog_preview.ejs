<section class="blog">
    <div class="blog__heading">
        <h1>Blog</h1>
    </div>
    <div class="blog__container">
    <% for (let i = 0; i < 1; i++) {%> 
        <div class="blog__tile">
            <a href="#"><div class="blog__title">
                <h2><%= articles[i].title %></h2>
            </div></a>
            <div class="blog__date">
                <%= articles[i].createdAt %> 
            </div>
            <div class="blog__preview">
                <%= articles[i].description %>
            </div>
            <a href="" class="blog__read-more">Read More</a>
            
        </div>
    <% } %> 
    </div>
</section>
